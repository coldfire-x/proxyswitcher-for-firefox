{
  "manifest_version": 2,
  "name": "Proxy Switcher",
  "version": "1.0.0",
  "description": "Quickly switch between proxy configurations",

  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },

  "permissions": [
    "proxy",
    "storage",
    "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "icons/icon.svg",
    "default_title": "Proxy Switcher",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  }
}
